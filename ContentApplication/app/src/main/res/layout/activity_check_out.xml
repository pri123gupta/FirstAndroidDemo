<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
   android:orientation="vertical"
    tools:context="com.applop.demo.activities.EnquiryMailActivity">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:title="Check Out"
        android:layout_width="match_parent"
        app:layout_scrollFlags="scroll|enterAlways"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/ll_placeOrder"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:theme="@style/TextLabel"
                android:textColorHint="#888888"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_text_name"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:hint="Enter your name"
                    android:textColorHint="#888888"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:theme="@style/TextLabel"
                android:textColorHint="#888888"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_text_phone_no"
                    android:textSize="16dp"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:hint="Enter your phone number"
                    android:textColorHint="#888888"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColorHint="#888888"
                android:theme="@style/TextLabel"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_text_Address"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:hint="Enter your address"
                    android:textColorHint="#888888"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColorHint="#888888"
                android:theme="@style/TextLabel"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_enquiry_message"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:hint="Enter your message"
                    android:textColorHint="#888888"
                    />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/paymentMethod_tv"
                android:layout_marginTop="20dp"
                android:onClick="paymentChangeClick"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:text="Payment Method : Cash On Delivery"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_placeOrder"
        android:background="#6A8455"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/totalPrice"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/placeOrderButton"
            android:text="Place Order"
            android:textStyle="bold"
            android:textSize="20dp"
            android:onClick="placeOrderClick"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
