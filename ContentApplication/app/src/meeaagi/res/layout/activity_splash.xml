<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.example.intel.demo.activities.SplashActivity" android:id="@+id/background" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/splash_background">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_marginTop="50dp"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/splash_logo"
            android:scaleType="fitCenter"/>
        <TextView

            android:layout_below="@id/image"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:textStyle="normal|bold|italic"
            android:textColor="@color/splash_text_color"
            android:textAlignment="center"

            android:text="@string/app_name"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</RelativeLayout>
