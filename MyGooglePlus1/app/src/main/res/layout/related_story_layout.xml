<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp" android:layout_weight="1"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/relatedLayoutItem"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical" android:layout_margin="5dp"


        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:id="@+id/relatedCoverImage"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:src="@drawable/marry"
            android:adjustViewBounds="true"
            />
        <TextView
            android:text="jii"
            android:layout_width="wrap_content" android:textSize="16dp"
            android:layout_marginRight="5dp" android:id="@+id/relatedStoryTitle"
            android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="2dp"
            android:textColor="#000000"
            />
    </LinearLayout>

</RelativeLayout>